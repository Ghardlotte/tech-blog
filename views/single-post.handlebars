<article>
    <div class="card">
        {{> post-info post}}
    </div>
</article>

{{#if loggedIn}}
<div class="card">
    <h4 class="card-header">Add Comment</h4>
    <form class="card-body" id="comment-form">
        <div>
            <textarea class="form-input" name="comment-body" id="comment_text"></textarea>
        </div>

        <div>
            <button class="btn" type="submit">Add Comment</button>
        </div>
    </form> 
</div>
{{/if}}

